# Makefile for dna_tool
CC = gcc
CFLAGS = -Wall -Wextra -std=c99 -O2 -g
TARGET = ../dna_tool
SOURCES = dna_tool.c
OBJECTS = $(SOURCES:.c=.o)

# Add math library and any other needed libraries
LIBS = -lm

.PHONY: all clean install test

all: $(TARGET)

$(TARGET): $(OBJECTS)
	@echo "ðŸ”¨ Linking $(TARGET)..."
	$(CC) $(CFLAGS) -o $(TARGET) $(OBJECTS) $(LIBS)
	@echo "âœ… Build completed: $(TARGET)"

%.o: %.c parsec_workload.h
	@echo "ðŸ”¨ Compiling $<..."
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	@echo "ðŸ§¹ Cleaning build artifacts..."
	rm -f $(OBJECTS) $(TARGET)
	@echo "âœ… Clean completed"

install: $(TARGET)
	@echo "ðŸ”§ Setting executable permissions..."
	chmod +x $(TARGET)
	@echo "âœ… Install completed"

test: $(TARGET)
	@echo "ðŸ§ª Testing executable..."
	@if [ -f $(TARGET) ]; then \
		echo "âœ… Executable exists"; \
		ls -la $(TARGET); \
	else \
		echo "âŒ Executable not found"; \
		exit 1; \
	fi

debug:
	@echo "ðŸ” Debug information:"
	@echo "CC: $(CC)"
	@echo "CFLAGS: $(CFLAGS)"
	@echo "TARGET: $(TARGET)"
	@echo "SOURCES: $(SOURCES)"
	@echo "OBJECTS: $(OBJECTS)"
	@echo "LIBS: $(LIBS)"
	@echo "Current directory: $(PWD)"
	@echo "Files in current directory:"
	@ls -la
	